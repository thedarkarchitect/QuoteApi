generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  age Int
  quotes Quote[]
}

model Quote {
  id Int @id @default(autoincrement())
  text String
  authorId Int?
  author Author? @relation(fields: [authorId], references: [id])
}
